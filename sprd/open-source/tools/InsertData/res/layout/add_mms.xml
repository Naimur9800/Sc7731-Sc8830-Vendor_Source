<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:orientation="vertical" android:layout_height="match_parent" android:isScrollContainer="true">
  
  <!-- 
    <TextView android:id="@+id/count_text" 
		      android:layout_width="match_parent" 
		      android:text="@string/sms_phone_text"
		      android:textSize="20dip" 
		      android:layout_height="wrap_content"/>
    <CheckBox android:id="@+id/phone_auto_up"
    		  android:text="@string/phone_auto_up_text" 
		      android:layout_width="wrap_content"
		      android:textSize="20dip" 
		      android:checked="true"
		      android:layout_height="wrap_content"/>
    <EditText android:id="@+id/phone_no"
		      android:maxLength="15"
		      android:layout_width="fill_parent"
              android:layout_height="wrap_content" 
              android:numeric="integer"
			  android:ellipsize="end" 
			  android:hint="13800138000" 
    		  android:textSize="20dip"/>
    -->
    <TextView android:id="@+id/count_text" 
    		  android:text="@string/mms_count_text"
              android:layout_width="wrap_content"
              android:textSize="20dip" 
              android:layout_height="wrap_content"/>
    <EditText android:id="@+id/mms_count"
    		  android:layout_width="match_parent" 
              android:layout_height="wrap_content"
              android:maxLength="10"
              android:hint="20" 
    		  android:inputType="number"/>
    		  
    <TextView android:id="@+id/size_text" 
    		  android:text="@string/mms_size_text"
              android:layout_width="wrap_content"
              android:textSize="20dip" 
              android:layout_height="wrap_content"/>
    <EditText android:id="@+id/mms_size"
    		  android:layout_width="match_parent" 
              android:layout_height="wrap_content"
              android:maxLength="3"
              android:hint="50" 
    		  android:inputType="number"/>   		  
    		  
    		  
    <TextView android:id="@+id/isread_text"
    		  android:text="@string/isread_text"
			  android:layout_width="wrap_content" 
			  android:textSize="20dip" 
			  android:layout_height="wrap_content"/>
    
    <RadioGroup android:id="@+id/isread_group"
	    		android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
		    <RadioButton android:id="@+id/isread"
		     			 android:layout_width="wrap_content"
		       			 android:layout_height="wrap_content"
		       			 android:text="@string/isread"
		       			 android:textSize="20dip" 
		       			 android:checked="true"/>
		    <RadioButton android:id="@+id/notread"
		     			 android:text="@string/notread" 
		     			 android:textSize="20dip" 
		    	         android:layout_width="wrap_content" 
		                 android:layout_height="wrap_content"/>
    </RadioGroup>
    <!--  -->
    
    <TextView android:id="@+id/status"
              android:text="@string/mms_box_type"
              android:textSize="20dip" 
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"/>
    <RadioGroup android:id="@+id/box_group"
	            android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" 
			>
		    <RadioButton android:id="@+id/box1"
		                 android:text="@string/mms_inbox_text"
					     android:layout_width="wrap_content" 
					     android:textSize="20dip" 
					     android:checked="true"
					     android:layout_height="wrap_content"/>
		    <RadioButton android:id="@+id/box2" 
		    			 android:text="@string/mms_sentbox_text" 
		    			 android:textSize="20dip" 
		    			 android:layout_width="wrap_content"
		    		     android:layout_height="wrap_content"/>
		    <RadioButton android:id="@+id/box3"
		                 android:text="@string/mms_draftbox_text"
		                 android:textSize="20dip" 
		                 
		                 android:layout_width="wrap_content"
		                 android:layout_height="wrap_content"/>
     </RadioGroup>
    <Button android:id="@+id/mms_apply" 
            android:text="@string/apply_button_text"
     		android:layout_width="match_parent"
     	    android:layout_height="wrap_content"
     	    android:textSize="30dip"
     	    android:onClick="applyMmsHandler"
     	    android:layout_gravity="center"/>
</LinearLayout>
</ScrollView>